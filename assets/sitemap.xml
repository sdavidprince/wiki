---
layout: none
permalink: /sitemap.xml
sitemap: false
is_wiki_page: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  {% for post in site.posts %}
  {% unless post.sitemap == false or post.layout == "404" or post.url contains ".txt" or post.url contains ".js" or post.url contains ".css" %}
  <url>
    <loc>{{ site.url }}{{ post.url | relative_url }}</loc>
    <lastmod>{{ post.date | date: "%Y-%m-%d" }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endunless %}
  {% endfor %}

  {% for page in site.pages %}
  {% unless page.layout == "none" or page.sitemap == false or page.layout == "404" or page.url contains ".js" or page.url contains ".css" or page.url contains ".txt" %}
  <url>
    <loc>{{ site.url }}{{ page.url | relative_url }}</loc>
    <lastmod>{{ page.date | date: "%Y-%m-%d" }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endunless %}
  {% endfor %}

</urlset>
